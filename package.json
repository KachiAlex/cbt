{
  "name": "cbt-system",
  "version": "1.0.0",
  "description": "CBT System with Hierarchical Admin Management",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build:frontend": "cd frontend && npm ci --audit-level=moderate && npm run build",
    "build:backend": "cd backend && npm install --omit=dev",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cbt-system.git"
  },
  "keywords": [
    "cbt",
    "exam",
    "education",
    "react",
    "nodejs"
  ],
  "author": "CBT System Team",
  "license": "MIT"
} 