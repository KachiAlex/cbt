# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/traditional-rulers
DB_NAME=traditional_rulers_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Cloud Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@traditionalrulers.org
ADMIN_PASSWORD=secure-admin-password

# SMS Configuration (for notifications)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=TRADITIONAL

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
